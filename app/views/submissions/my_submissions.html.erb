<div class="container">
  <h1>My Submissions to Collaboration Requests </h1>
  <% @submissions.each do |submission| %>
    <h2>Your submission on <%= submission.request.track.user %>'s request</h2>
    <p>Description: <%= submission.description %></p>
    <%= render 'shared/submission_card', submission: submission %>
    <%= link_to 'Delete Submission', submission_path(submission), method: :delete, data: { confirm: "Are you sure you want to Delete your submission?" }, class: "btn btn-dark" %>
  <% end %>
</div>

