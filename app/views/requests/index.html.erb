<div class="container">
  <div class="lockup-title d-flex justify-content-between">
    <div class="index-title">
      <h1><b class="number-high"><%= @requests.count %></b> tracks you can collaborate on.</h1>
      <br>
      <p class="text-title-index">Click on a track to begin a collaboration request with other artists on our platform</p>
    </div>

    <div class="row justify-content-center">
      <div class="index-call-to-action">
        <%= link_to "+ Add a new request", new_track_path, class: "btn btn-soft" %>
      </div>
    </div>
  </div>
  <div class="index-cards">
    <% @requests.each do |request| %>
      <%= link_to request_path(request) do %>
        <%= render 'shared/track', track: request.track %>
      <% end %>
    <% end %>
  </div>
</div>
